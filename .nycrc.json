{
  "all": true,
  "check-coverage": true,
  "lines": 80,
  "statements": 80,
  "functions": 80,
  "branches": 50,
  "include": [
    "src/lib/**/*.ts",
    "src/core/**/*.ts"
  ],
  "exclude": [
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/node_modules/**",
    "**/tests/**",
    "**/*.config.ts",
    "**/*.config.js",
    "**/dist/**",
    "**/.next/**",
    "**/.velite/**",
    "**/middleware.ts",
    "**/src/app/**",
    "**/src/components/**",
    "**/src/actions/**",
    "**/src/libs/**",
    "**/src/core/presentation/controllers/**",
    "**/src/core/infrastructure/**",
    "**/src/core/application/**"
  ],
  "reporter": [
    "text",
    "html",
    "lcov",
    "json-summary"
  ],
  "report-dir": "./docs/coverage-reports",
  "temp-dir": "./.nyc_output"
}
